# Digitarr Environment Variables Configuration
# Copy this to .env and fill in your values
# Or set these directly in docker-compose.yml

# ============================================================================
# TMDB CONFIGURATION (Required)
# ============================================================================
# TMDB API Key (required - free from https://www.themoviedb.org/settings/api)
TMDB_API_KEY=your_tmdb_api_key_here

# ============================================================================
# OVERSEERR CONFIGURATION (Optional)
# ============================================================================
# Leave empty to disable Overseerr
OVERSEERR_API_URL=http://localhost:5055
OVERSEERR_API_KEY=

# ============================================================================
# RIVEN CONFIGURATION (Optional)
# ============================================================================
# Leave empty to disable Riven
RIVEN_API_URL=http://localhost:8083
RIVEN_API_KEY=

# ============================================================================
# DISCORD NOTIFICATIONS (Optional)
# ============================================================================
# Discord webhook URL for notifications
DISCORD_WEBHOOK_URL=

# ============================================================================
# SCHEDULE CONFIGURATION
# ============================================================================
# Time to run daily (24h format, e.g., "19:00")
# Leave empty to run once and exit
RUN_TIME=19:00

# Minutes to wait after detecting releases before sending requests
REQUEST_DELAY_MINUTES=0

# ============================================================================
# FILTER CONFIGURATION
# ============================================================================
# Minimum TMDB rating (0-10, 0 = disabled)
FILTERS_MIN_TMDB_RATING=6.0

# Exclude adult content (true/false)
FILTERS_EXCLUDE_ADULT=true

# Comma-separated language codes to allow (empty = all languages)
# Example: en,es,fr
FILTERS_ALLOWED_LANGUAGES=en

# Comma-separated genres to exclude
# Example: Horror,Documentary
FILTERS_EXCLUDED_GENRES=

# Comma-separated age ratings to exclude
# Example: R,NC-17
FILTERS_EXCLUDED_CERTIFICATIONS=

# ============================================================================
# LOGGING & TIMEZONE
# ============================================================================
LOGGING_LEVEL=INFO
TZ=UTC
